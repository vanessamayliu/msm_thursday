<%= search_form_for @q, :class => collapse_search_form, :id => "roles_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :character_cont, "Character contains" %>
    <%= f.text_field :character_cont, :class => "form-control", :placeholder => "Character contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :movie_title_cont, "Movie title contains" %>
    <%= f.text_field :movie_title_cont, :class => "form-control", :placeholder => "Movie title contains" %>
  </div>

  <div class="form-group">
    <%= f.label :dob, "Actor Dob" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='actorgteqdobPicker' data-target-input="nearest">
          <%= f.text_field :actor_dob_gteq, :class => "form-control datetimepicker-input", :placeholder => "Actor Dob greater than or equal to", :data => {:target => '#actorgteqdobPicker'} %>
          <div class="input-group-append" data-target='#actorgteqdobPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='actorlteqdobPicker' data-target-input="nearest">
          <%= f.text_field :actor_dob_lteq, :class => "form-control datetimepicker-input", :placeholder => "Actor Dob less than or equal to", :data => {:target => '#actorlteqdobPicker'} %>
          <div class="input-group-append" data-target='#actorlteqdobPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#actorgteqdobPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#actorlteqdobPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#actorgteqdobPicker').on("dp.change", function (e) {
              $('#actorlteqdobPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#actorlteqdobPicker').on("dp.change", function (e) {
              $('#actorgteqdobPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/roles" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#roles_filters">
  Show filters
</a>
